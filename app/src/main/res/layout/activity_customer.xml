<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.a1234.lineupall.customer">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/aaaaa"
                android:layout_marginTop="50sp"/>

            <ListView
                android:id="@+id/product_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="80sp"
                android:background="@drawable/selector_setting_all_shape" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right|center"
            android:orientation="horizontal"
            android:background="#B3ffffff"
            android:weightSum="4">

            <ImageButton
                android:id="@+id/client"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:src="@drawable/group1"
                android:text="In" />

            <ImageButton
            android:id="@+id/qrcode"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:src="@drawable/group4"
            android:text="Out" />

            <ImageButton
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:src="@drawable/group3"
                android:text="Out" />

        <ImageButton
            android:id="@+id/customer"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:src="@drawable/ingroup2"
            android:text="Out" />
    </LinearLayout>

    </FrameLayout>
</android.support.constraint.ConstraintLayout>
