<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#29435F"
    tools:context="com.example.a1234.lineupall.buttontime">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20sp"
                android:background="@drawable/selector_setting_all_shape"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal|center"
                android:orientation="horizontal"
                android:paddingLeft="6dp">

                <TextView
                    android:id="@+id/a"
                    android:layout_width="47dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:text="營業\n時間"
                    android:textColor="#1d3856"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#1d3856" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#1d3856" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/l"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#1d3856" />

                    <TextView
                        android:id="@+id/o"
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#1d3856" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="3dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/edit" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20sp"
                android:background="@drawable/selector_setting_all_shape"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="6dp">

                <TextView
                    android:id="@+id/d4"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:text="排隊\n時間"
                    android:textColor="#1d3856"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/h"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#1d3856" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/f"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="分鐘"
                                android:textColor="#1d3856" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="18dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/edit" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right|center"
            android:orientation="horizontal"
            android:background="#B3ffffff"
            android:weightSum="4">

        <ImageButton
            android:id="@+id/client"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/group1"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="In" />

        <ImageButton
            android:id="@+id/qrcode"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:src="@drawable/group4"
            android:text="Out" />

            <ImageButton
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:src="@drawable/ingroup3"
                android:text="Out" />

        <ImageButton
            android:id="@+id/customer"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:background="@null"
            android:src="@drawable/group2"
            android:text="Out" />
    </LinearLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
