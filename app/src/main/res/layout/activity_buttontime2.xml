<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#29435F"
    tools:context="com.example.a1234.lineupall.buttontime">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"

                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"

                android:layout_marginRight="10dp"
                android:layout_marginTop="20sp"
                android:background="@drawable/selector_setting_all_shape"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:text="11:00~13:00" />

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="17:00~19:00" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/aaa"
                            android:layout_width="348dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15sp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="尖峰時段" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="342dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15sp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="9dp"
                            android:text="等待時間" />

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="308dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15sp"
                            android:layout_weight="1"
                            android:paddingRight="10dp"
                            android:text="min" />

                        <ImageButton
                            android:id="@+id/imageButton1"
                            android:layout_width="347dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:src="@drawable/edit" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"

                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"

                android:layout_marginRight="10dp"
                android:layout_marginTop="20sp"
                android:background="@drawable/selector_setting_all_shape"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="6dp">

                <TextView
                    android:id="@+id/d4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="離峰時段" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="等待時間" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="min" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:src="@drawable/edit" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="53dp"
                android:layout_height="27dp"
                android:layout_margin="35dp"
                android:background="@drawable/finish"
                android:paddingTop="15dp" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@null" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@null" />

            <TextView
                android:id="@+id/h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right|center"
            android:background="#B3ffffff"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageButton
                android:id="@+id/client"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:src="@drawable/group1"
                android:text="In" />

            <ImageButton
                android:id="@+id/qrcode"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:src="@drawable/group4"
                android:text="Out" />

            <ImageButton
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:src="@drawable/ingroup3"
                android:text="Out" />

            <ImageButton
                android:id="@+id/customer"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:src="@drawable/group2"
                android:text="Out" />
        </LinearLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
